@model IEnumerable<BusinessLayer.ViewModels.EmployeeViewModel>

@{
    ViewData["Title"] = "Your Employees";

}

<h1>Your employees:</h1>


<h5 class="mt-3"><a  asp-area="" asp-controller="Employee" asp-action="CreateEmployee">Create new employee</a></h5>
<h5></h5>

    
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>            
            <th>
                Progress
            </th>
            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
             <td>
                    <!--not implemented due to lack of time-->
                    <div class="progress" aria-label="progress">
                        <div id="progress" aria-labelledby="progress" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="5" aria-valuemin="0" ia-valuemax="10">
                        </div>
                    </div>
             </td>
            <td>
                    <a asp-area="" asp-controller="Task" asp-action="SeeTasks" asp-route-id="@item.Id">See Tasks</a> |
                    <a asp-area="" asp-controller="Task" asp-action="Create" asp-route-id="@item.Id">Assign new Task</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    <a  asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
            </td>
        </tr>
        }
        
    </tbody>
</table>
