@model IEnumerable<BusinessLayer.ViewModels.EmployeeViewModel>

@{
    ViewData["Title"] = "ListBestEmployees";
}

<h1>Top 5 best Employees</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                
                @Html.DisplayNameFor(model => model.EmployerInfo)
            </th>
            <th>
                Tasks completed this month
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    
                    @Html.DisplayFor(modelItem => item.EmployerInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletedTaskCouner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            
        </tr>
}
    </tbody>
</table>
